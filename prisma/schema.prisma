generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @default(uuid())
  name     String
  image    String
  publicId String
  Product  Product[]
}

model Product {
  id         String   @id @default(uuid())
  name       String
  price      Float
  image      String
  categoryId String
  publicId   String
  Category   Category @relation(fields: [categoryId], references: [id])
}
